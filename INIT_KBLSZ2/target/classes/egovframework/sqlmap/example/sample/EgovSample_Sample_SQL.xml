<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="Sample">

	<typeAlias  alias="egovMap" type="egovframework.rte.psl.dataaccess.util.EgovMap"/>
	<typeAlias  alias="searchVO" type="egovframework.example.sample.service.KBLSZSampleDefaultVO"/>

	<resultMap id="sample" class="egovframework.example.sample.service.KBLSZSampleVO">
		<result property="id" column="id"/>
		<result property="name" column="name"/>
		<result property="description" column="description"/>
		<result property="useYn" column="use_yn"/>
		<result property="regUser" column="reg_user"/>
	</resultMap>

	<insert id="KBLSZsampleDAO.insertSample">
		<![CDATA[
			INSERT INTO SAMPLE 
				( ID
				  , NAME
				  , DESCRIPTION
				  , USE_YN
				  , REG_USER )
			VALUES ( #id#
				  , #name#
				  , #description#
				  , #useYn#
				  , #regUser# )
		]]>
	</insert>
	
	<update id="KBLSZsampleDAO.updateSample">
		<![CDATA[
			UPDATE SAMPLE
			SET ID=#id#
				, NAME=#name#
				, DESCRIPTION=#description#
				, USE_YN=#useYn#
			WHERE ID=#id#
		]]>
	</update>
	
	<delete id="KBLSZsampleDAO.deleteSample">
		<![CDATA[
			DELETE FROM SAMPLE 
			WHERE ID=#id#
		]]>
	</delete>
    
    <select id="KBLSZsampleDAO.selectSample" resultMap="sample">
        <![CDATA[
            SELECT
                ID, NAME, DESCRIPTION, USE_YN, REG_USER
            FROM SAMPLE 
            WHERE ID=#id#
        ]]>
    </select>
	
	<select id="KBLSZsampleDAO.selectSampleList" parameterClass="searchVO" resultClass="egovMap">

			SELECT * FROM
          (
         SELECT
            ID, NAME, DESCRIPTION, USE_YN, REG_USER
            , ROW_NUMBER() OVER(ORDER BY ID DESC) AS ROW_NUM   
         FROM INIT_ADMIN.SAMPLE
         WHERE 1=1
         <isEqual prepend="AND" property="searchCondition" compareValue="0">
            ID LIKE '%' || #searchKeyword# || '%'
         </isEqual>
         <isEqual prepend="AND" property="searchCondition" compareValue="1">
            NAME LIKE '%' || #searchKeyword# || '%'
         </isEqual>
         )
         WHERE ROW_NUM BETWEEN (#firstIndex#+1) AND (#firstIndex#+#recordCountPerPage#)
         ORDER BY ROW_NUM
			
			
			<!-- 	LIMIT #recordCountPerPage# OFFSET #firstIndex#		-->
 	</select>
	
	<select id="KBLSZsampleDAO.selectSampleListTotCnt" parameterClass="searchVO" resultClass="int">

			SELECT COUNT(*) totcnt
			FROM SAMPLE
			WHERE 1=1
			<isEqual prepend="AND" property="searchCondition" compareValue="0">
				ID LIKE '%' || #searchKeyword# || '%'
			</isEqual>
			<isEqual prepend="AND" property="searchCondition" compareValue="1">
				NAME LIKE '%' || #searchKeyword# || '%'
			</isEqual>
	</select>

</sqlMap>
